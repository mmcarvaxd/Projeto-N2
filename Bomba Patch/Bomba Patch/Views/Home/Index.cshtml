
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styles.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
    <title>Bomba patch</title>
</head>

<body>
    <div id="page-home">
        <div class="content">
            <header>
                <div class="menu">
                    <p>Login!</p>
                    <p>Registar!</p>
                </div>
            </header>
            <main>
                <div>
                    <div class="option-title">
                        <div class="options">
                            <p>Bem vindo ao Bomba Patch!</p>
                        </div>
                    </div>
                    <div class="cards">
                        <div class="card">
                            <div>
                                <p class="font-title">Técnicos</p>
                            </div>
                            <div>
                                <img src="~/images/neto.png" alt="" class="img-card">
                            </div>
                        </div>
                        <div class="card">
                            <div>
                                <p class="font-title">Jogadores</p>
                            </div>
                            <div>
                                <img src="~/images/ronaldo.png" alt="" class="img-card">
                            </div>
                        </div>
                        <div class="card">
                            <div>
                                <p class="font-title">Times</p>
                            </div>
                            <div>
                                <img src="~/images/times.png" alt="" class="img-card">
                            </div>
                        </div>
                        <div class="card">
                            <div>
                                <p class="font-title">Estádios</p>
                            </div>
                            <div>
                                <img src="~/images/estadio.png" alt="" class="img-card">
                            </div>
                        </div>
                    </div>
                    <div class="titles">
                        <div class="title">
                            <div>
                                <p class="font-title">Configurações</p>
                            </div>
                            <div class="img-div">
                                <img src="~/images/VAR.png" alt="" class="img-title">
                            </div>
                        </div>
                        <div class="title"> 
                            <div>
                                <p class="font-title">Sobre</p>
                            </div>
                            <div class="img-div">
                                <img src="~/images/sobre.png" alt="" id="sobre">
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>

</html>