@model UsuariosViewModel
@{
    ViewData["Title"] = "index";
}
<main>
    <div class="container-login">
        <div class="cards-login">
            <div class="card-login" onclick="tecnicosHome()">
                <form action="/login/FazLogin" method="post">
                    <p class="font-title">Insira seu Login</p>
                    <br />
                    <label for="email" class="control-label">Email</label>
                    <input type="email" name="Email" value="@Model.Email" class="form-control" />
                    <br />
                    <label for="senha" class="control-label">Senha</label>
                    <input type="password" name="Senha" value="@Model.Senha" class="form-control" />
                    @if(!String.IsNullOrEmpty(ViewBag.Erro))
                    {
                        <p class="text-danger">@ViewBag.Erro</p>
                    }
                    <br />
                    <label for="salvarbutton">
                        <div class="btn btn-primary">Logar</div>
                    </label>
                    <input type="submit" name="salvarbutton" id="salvarbutton" style="display: none" />
                </form>
                <br />
                <a href="/login/create">Registrar!</a>
            </div>
        </div>
    </div>
</main>